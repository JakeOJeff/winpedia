generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String    @unique
  passwordhash  String    
  bio           String?
  avatarUrl     String?
  streak        int       @default ( 0 )
  iceStatus     String    @default("Frozen")
  postsToday    Int       @default ( 0 )
  lastPostDate  DateTime? 
  createdAt     DateTime  @default(now())
  posts         Post[]
  likes         Like[]
}